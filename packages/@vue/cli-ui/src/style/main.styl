@import "imports"

html,
body,
#app,
.page
  height 100%

.empty-icon
  display block
  margin 24px auto
  width 48px
  height @width

.actions-bar
  padding 12px
  background $color-light-background
  h-box()
  box-center()

  > *
    space-between-x(12px)

  &.space-between
    justify-content space-between
  &.center
    justify-content center
  &.start
    justify-content flex-start
  &.end
    justify-content flex-end

.cta-text
  margin 12px
  color lighten($vue-color-dark, 40%)
  font-size 18px
