{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "moduleResolution": "node",
    <%_ if (options.classComponent) { _%>
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    <%_ } _%>
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
    <%_ if (hasMocha) { _%>
      "mocha",
      "chai"
    <%_ } else if (hasJest) { _%>
      "jest"
    <%_ } _%>
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
