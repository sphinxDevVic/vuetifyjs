{
  "private": true,
  "workspaces": [
    "packages/@vue/*",
    "packages/test/*"
  ],
  "scripts": {
    "test": "jest --env node",
    "lint": "eslint --fix packages/**/*.js",
    "precommit": "lint-staged"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/packages/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "debug": "^3.1.0",
    "eslint": "^4.14.0",
    "eslint-plugin-vue-libs": "^2.1.0",
    "globby": "^7.1.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.0"
  }
}
