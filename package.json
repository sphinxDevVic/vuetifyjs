{
  "private": true,
  "workspaces": [
    "packages/@vue/*",
    "packages/test/*"
  ],
  "scripts": {
    "test": "jest --env node",
    "lint": "eslint --fix packages/**/*.js packages/**/bin/* test/**/*.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/scripts/testSetup.js"
    ],
    "testPathIgnorePatterns": [
      "/template/",
      "/packages/test/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "packages/**/bin/*": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "debug": "^3.1.0",
    "eslint": "^4.14.0",
    "eslint-plugin-vue-libs": "^2.1.0",
    "globby": "^7.1.1",
    "http-server": "^0.10.0",
    "jest": "^22.0.4",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.0",
    "memfs": "^2.6.0",
    "puppeteer": "^0.13.0",
    "yorkie": "^1.0.2"
  }
}
